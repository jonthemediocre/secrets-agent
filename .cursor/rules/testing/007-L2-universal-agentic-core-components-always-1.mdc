                "anomaly_detector"
            ],
            "integration": [
                "api_connector",
                "data_transformer",
                "sync_coordinator",
                "webhook_handler"
            ]
        }
        return agent_map.get(app_type, ["general_purpose_agent"])
        
    def _get_mcp_tool_requirements(self, app_type: str) -> list:
        """Get MCP tool requirements based on application type"""
        tool_map = {
            "chatbot": [
                "conversation_tools",
